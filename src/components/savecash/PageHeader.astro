---
interface Props {
  title?: string
  backHref?: string
  backLabel?: string
}

const { title = 'Mi Cuenta de Ahorro', backHref = '/', backLabel = 'Volver al inicio' } = Astro.props
---

<div class='mb-6'>
  <a href={backHref} class='inline-flex items-center gap-2 text-indigo-600 hover:text-indigo-800 font-medium transition-colors'>
    <svg
      xmlns='http://www.w3.org/2000/svg'
      width='20'
      height='20'
      viewBox='0 0 24 24'
      fill='none'
      stroke='currentColor'
      stroke-width='2'
      stroke-linecap='round'
      stroke-linejoin='round'
    >
      <path d='M19 12H5M12 19l-7-7 7-7'></path>
    </svg>
    {backLabel}
  </a>
</div>

<h1 class='text-4xl font-bold text-center mb-8 text-gray-900 w-fit mx-auto' transition:name='title-cta'>{title}</h1>
